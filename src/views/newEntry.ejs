<%-include ("partials/header")%>

<div class="col-md-4 offset-md-4">
    <h2 class="text-center">Write a new Entry</h2>

    <form method="post">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" class="form-control" id="title" placeholder="Enter a new title" required>
        </div>
        <div class="form-group"> 
            <label for="body">Entry text</label>
            <textarea name="body" id="body"  rows="3" class="form-control" required></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="post Entry" class = "btn btn-primary">
        </div>
    </form>
</div>
<%-include ("partials/footer")%>